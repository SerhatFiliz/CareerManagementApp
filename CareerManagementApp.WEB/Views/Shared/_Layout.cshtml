<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Career Builder</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background: linear-gradient(to bottom right, #6a11cb 0%, #2575fc 100%);
            font-family: 'Arial', sans-serif;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background: inherit;
            color: white;
            position: relative;
        }

            .header h3 {
                margin: 0;
                font-weight: bold;
            }

        .profile-icon {
            font-size: 50px;
            color: white;
            cursor: pointer;
            position: absolute;
            right: 10px;
            top: 10px;
            transition: color 0.3s ease;
        }

            .profile-icon:hover {
                color: #feb47b;
            }

        .leftbar {
            background: inherit;
            color: white;
            padding: 15px;
            width: 540px;
            margin-right: 15px;
        }

        .leftbar-btn {
            display: block;
            width: 100%;
            margin-bottom: 10px;
            color: white;
            background: linear-gradient(to right, #6a11cb 0%, #123C6f 50%, #6a11cb 100%);
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
            border-radius: 5px;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .leftbar-btn:hover {
                background: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
                border-color: #feb47b;
            }

        .leftbar .active {
            font-weight: bold;
            color: #feb47b;
            border-left: 4px solid #feb47b;
        }

        .footer {
            color: white;
            padding: 20px;
            text-align: center;
            background: inherit;
            margin-top: auto;
        }

            .footer p {
                margin: 0;
                font-size: 14px;
            }

        .content {
            flex: 1;
            padding: 20px;
        }

        .cta-button {
            background: inherit;
            color: white;
            border-radius: 30px;
            padding: 20px 50px;
            font-size: 22px;
            font-weight: 600;
            text-transform: uppercase;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .cta-button:hover {
                background-color: rgba(255, 255, 255, 0.3);
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="container-fluid d-flex flex-column" style="min-height: 100vh;">
        <div class="row">
            <div class="col-12 header">
                <h3>CareerBuilder</h3>
                <a asp-action="Profile" asp-controller="Home"><i class="bi bi-person-circle profile-icon"></i></a>
            </div>
        </div>
        <div class="row flex-grow-1">
            <div class="col-3 leftbar">
                <a asp-action="index" asp-controller="Home" class="btn btn-secondary leftbar-btn">Home</a>
                <a asp-action="blog" asp-controller="Home" class="btn btn-secondary leftbar-btn @((ViewData["ActivePage"] as string) == "Blog" ? "active" : "")">Blogs</a>
                <a asp-action="VisualCareerAdvisor" asp-controller="Home" class="btn btn-secondary leftbar-btn">Visual Career Advisor</a>
            </div>
            <div class="col-9 content">
                @RenderBody()
            </div>
        </div>
        <div class="row">
            <div class="col-12 footer">
                <p>&copy; 2023 My MVC .NET App. All rights reserved.</p>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
