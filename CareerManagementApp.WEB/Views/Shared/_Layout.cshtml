<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Career Builder</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Sayfanın tam yüksekliğini kaplamasını sağlar */
        }

        .navbar {
            background-color: #333;
            color: white;
            padding: 10px;
        }

        .leftbar {
            background-color: #f1f1f1;
            padding: 15px;
            width: 200px;
        }

        .footer {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: center;
            margin-top: auto; /* Footer'ı sayfanın en altına itmek için */
        }

        .leftbar-btn {
            display: block;
            width: 100%;
            margin-bottom: 10px;
        }

        .content {
            flex: 1; /* İçeriğin esnek bir şekilde büyümesini sağlar */
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 navbar">
                <h3>CareerBuilder</h3>
            </div>
        </div>
        <div class="row flex-grow-1"> <!-- Flex-grow ile içerik alanının büyümesini sağla -->
            <div class="col-3 leftbar">
                <a asp-action="index" asp-controller="Home" class="btn btn-secondary leftbar-btn">Home</a>
                <a asp-action="blog" asp-controller="Home" class="btn btn-secondary leftbar-btn">Blogs</a>
                <a asp-action="VisualCareerAdvisor" asp-controller="Home" class="btn btn-secondary leftbar-btn">Visual Career Advisor</a>
            </div>
            <div class="col-9 content">
                @RenderBody()
            </div>
        </div>
        <div class="row">
            <div class="col-12 footer">
                <p>&copy; 2023 My MVC .NET App. All rights reserved.</p>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
