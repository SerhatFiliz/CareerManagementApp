@model Blog

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        .blog-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .blog-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #343a40;
            margin-bottom: 20px;
        }

        .blog-meta {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 30px;
        }

        .blog-content {
            font-size: 1.2rem;
            line-height: 1.8;
            color: #495057;
        }

        .back-link {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="blog-container">
            <h1 class="blog-title">@Model.Title</h1>
            <p class="blog-meta">
                <span>Yazar: @Model.User?.Email</span> |
                <span>Tarih: @DateTime.Now.ToString("dd MMMM yyyy")</span>
            </p>
            <div class="blog-content">
                @Html.Raw(Model.Content)
            </div>
            <div class="back-link">
                <a asp-controller="home" asp-action="blog" class="btn btn-secondary">Geri Dön</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
