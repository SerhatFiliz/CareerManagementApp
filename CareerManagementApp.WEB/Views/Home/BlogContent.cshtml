@model Blog

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Title</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />

    <style>
        .blog-container {
            background-color: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 100%;
            margin-left: 50%; 
            margin-right: 5%; 
            margin-top: 20px;
        }

        .blog-title {
            font-size: 3rem;
            font-weight: bold;
            color: #343a40;
            margin-bottom: 20px;
        }

        .blog-meta {
            font-size: 1rem;
            color: #6c757d;
            margin-bottom: 30px;
        }

        .blog-content {
            font-size: 1.2rem;
            line-height: 1.8;
            color: #495057;
        }

        .back-link {
            margin-top: 20px;
        }

       
        .content-area {
            flex: 1;
            padding-left: 20px; 
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex flex-column" style="min-height: 100vh;">
        <div class="row flex-grow-1">

         
            <div class="col-9 content-area">
                <div class="blog-container">
                    <h1 class="blog-title">@Model.Title</h1>
                    <p class="blog-meta">
                        <span>Yazar: @Model.User?.Email</span> |
                        <span>Tarih: @DateTime.Now.ToString("dd MMMM yyyy")</span>
                    </p>
                    <div class="blog-content">
                        @Html.Raw(Model.Content)
                    </div>
                    <div class="back-link">
                        <a asp-controller="Home" asp-action="Blog" class="btn btn-secondary">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
