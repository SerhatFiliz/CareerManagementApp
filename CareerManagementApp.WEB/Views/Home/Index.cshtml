@model List<Blog>

@{
    ViewData["Title"] = "Home";
}

<h2 class="mt-3">Welcome to CareerBuilder</h2>
<p>Explore the latest blogs, tools, and resources to build your dream career.</p>

<h3>Latest Blogs</h3>
@foreach (var blog in Model)
{
<div class="row">
    <!-- Blog Card 1 -->
    <div class="col-md-6">
        <div class="blog-card">
            <img src="https://via.placeholder.com/400x150" alt="Blog 1" class="img-fluid">
            <div class="blog-card-body">
                <h5 class="blog-card-title">@blog.Title</h5>
                    <p class="blog-card-text">@blog.Content.Substring(0, Math.Min(100, blog.Content.Length))...</p>
                    <a asp-controller="Home" asp-action="BlogContent" asp-route-id="@blog.ID" class="btn btn-primary">Devamını Oku</a>
            </div>
        </div>
    </div>
</div>  
}
