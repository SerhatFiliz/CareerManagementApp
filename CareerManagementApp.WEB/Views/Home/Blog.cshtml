@model List<Blog>

<!DOCTYPE html>
<html>
<head>
    <title>Blogs</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        .blog-card {
            margin-bottom: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .blog-title {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .blog-content {
            color: #555;
        }

        .add-blog-container {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
            padding: 20px;
            border: 2px dashed #ddd;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .add-blog-container:hover {
                background-color: #f8f9fa;
            }

        .add-blog-icon {
            font-size: 2rem;
            margin-right: 10px;
            color: #007bff;
        }

        .add-blog-text {
            font-size: 1.25rem;
            font-weight: bold;
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Blogs</h1>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var blog in Model)
            {
                <div class="blog-card">
                    <h2 class="blog-title">@blog.Title</h2>
                    <p class="blog-content">@blog.Content.Substring(0, Math.Min(100, blog.Content.Length))...</p>
                    <a asp-controller="Home" asp-action="BlogContent" asp-route-id="@blog.ID" class="btn btn-primary">Devamını Oku</a>
                </div>
            }
        }
        else
        {
            <p>Henüz blog eklenmemiş.</p>
        }

        <!-- Add Blog Button -->
        <div class="add-blog-container" onclick="location.href='@((User.Identity.IsAuthenticated) ? "/blogs/add" : "/Account/Login")'">
            <span class="add-blog-icon">&#43;</span>
            <span class="add-blog-text">Add Blog</span>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
